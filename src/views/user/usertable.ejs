<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- ===== BOX ICONS ===== -->
    <link href='https://cdn.jsdelivr.net/npm/boxicons@2.0.5/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css"
        integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <!-- ===== CSS ===== -->
    <link rel="stylesheet" href="/css/styleConciliator.css">

    <!-- ===== BOOTSTRAP ===== -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <!-- ===== DATATABLES ===== -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.7/css/responsive.bootstrap4.min.css">

    <!-- ===== JQUERY ===== -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>

    <title>Usuario</title>
</head>

<body id="body-pd">
    <header class="header" id="header">
        <div class="header__toggle">
            <i class='bx bx-menu' id="header-toggle"></i>
        </div>

        <div class="header__img">
            <img src="/images/HUN.jpg" alt="">
        </div>
    </header>

    <div class="l-navbar" id="nav-bar">
        <nav class="nav">
            <div>
                <a href="https://www.uninorte.edu.co/web/hospital" class="nav__logo">
                    <i class="bi bi-house nav__logo-icon"></i> 
                    <span class="nav__logo-name">
                        Hospital<br>
                        Universidad del<br>
                        Norte
                    </span>
                </a>

                <div class="nav__list">
                    <a href="/user/usermain" class="nav__link">
                        <i class="bi bi-calendar-week nav__icon"></i>
                        <span class="nav__name">Solicitar cita</span>
                    </a>
                </div>
            </div>
            <a href="#" onclick="logOut()" class="nav__link">
                <i class='bx bx-log-out nav__icon'></i>
                <span class="nav__name">Cerrar sesión</span>
            </a>
        </nav>
    </div>

    <div class="container-fluid">

        <div class="col-md-12" style="margin-top: 80px;">
            <h4 class="title text-center mt-4">
                Hola <%=data.NombreP%>
            </h4>
            <hr class="my-4">
            <div class="text-center mb-2">
                A continuación podrás revisar las citas médicas solicitadas por los usuarios
            </div>
            <table id="conTable" class="table table-bordered table-responsive">
                <thead>
                    <tr>
                        <th>Acciones</th>
                        <th>Nombres</th>
                        <th>Apellidos</th>
                        <th>Celular</th>
                        <th>Tipo de identificación</th>
                        <th>N° de identificación</th>
                        <th>Especialidad</th>
                        <th>Doctor</th>
                        <th>Fecha</th>
                        <th>Hora</th>
                        <th>Cita</th>
                        <th>Afiliacion</th>
                        <th>Entidad</th>
                        <th>Régimen</th>
                        <th>Modalidad</th>
                        <th>Orden</th> 
                        <th>Autorización</th>                                             
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>

                    <% if (data) { %>
                        <!-- Es el nombre que se le dió a los datos obtenidos en el controller.list -->

                        <% for(var i=0; i < data.length; i++) { %>

                            <tr>
                                <td>
                                    <div class="row">
                                        <% if (data[i].Estado !== 'Aceptada') { %>
                                        <div class="col-12 col-sm-6">
                                            <a href="/update/<%= data[i].idpa %>" class="btn btn-info"><i
                                                    class="fas fa-edit"></i></a>
                                        </div>
                                        <% } %>
                                        <div class="col-12 col-sm-6">
                                            <a href="/delete/<%= data[i].idpa %>" class="btn btn-danger"><i
                                                    class="far fa-trash-alt"></i></a>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <%= data[i].NombreP %>
                                </td>
                                <td>
                                    <%= data[i].ApellidoP %>
                                </td>
                                <td>
                                    <%= data[i].Celular %>
                                </td>
                                <td>
                                    <%= data[i].Tipo_documento %>
                                </td>
                                <td>
                                    <%= data[i].CedulaP %>
                                </td>
                                <td>
                                    <%= data[i].Especialidad %>
                                </td>
                                <td>
                                    <%= data[i].Doctor %>
                                </td>
                                <td>
                                    <%= data[i].fecha %>
                                </td>
                                <td>
                                    <%= data[i].hora_ini %>
                                </td>
                                <td>
                                    <%= data[i].Cita %>
                                </td>
                                <td>
                                    <%= data[i].Afiliacion %>
                                </td>
                                <td>
                                    <%= data[i].entidad %>
                                </td>
                                <td>
                                    <%= data[i].Regimen %>
                                </td>
                                <td>
                                    <%= data[i].Modo %>
                                </td>
                                <td>                                     
                                    <a href="#" class="btn btn-warning"
                                        onclick="window.open('<%= data[i].Orden %>', '_blank', 'fullscreen=yes'); return false;">
                                        <i class="far fa-file-pdf"></i>
                                    </a>                                   
                                </td>   
                                <td>
                                    <%= data[i].Autorizacion %>
                                </td>                                                          
                                <td>
                                    <% switch (data[i].Estado) { case 'Pendiente' : %>
                                        <span class="badge bg-warning text-dark">
                                            <%= data[i].Estado %>
                                        </span>
                                        <% break; case 'Aceptada' : %>
                                            <span class="badge badge-success">
                                                <%= data[i].Estado %>
                                            </span>
                                            <% break; case 'Rechazada' : %>
                                                <span class="badge badge-danger">
                                                    <%= data[i].Estado %>
                                                </span>
                                                <% break; } %> 
                                </td>
                            </tr>

                            <% } %>
                                <% } %>

                </tbody>

            </table>
        </div>
    </div>
    <!--===== MAIN JS =====-->
    <script src="/js/main.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.24/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.7/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.7/js/responsive.bootstrap4.min.js"></script>

    <script>
        $('[data-toggle="tooltip"]').each(function () {
            var options = {
                html: true
            };

            if ($(this)[0].hasAttribute('data-type')) {
                options['template'] =
                    '<div class="tooltip ' + $(this).attr('data-type') + '" role="tooltip">' +
                    '	<div class="tooltip-arrow"></div>' +
                    '	<div class="tooltip-inner"></div>' +
                    '</div>';
            }

            $(this).tooltip(options);
        });

        $(document).ready(function () {
            $('#conTable').DataTable({
                language: {
                    processing: "Búsqueda en curso...",
                    search: "Buscar:",
                    lengthMenu: "Mostrar _MENU_ registros",
                    info: "Página _PAGE_ de _PAGES_",
                    infoEmpty: "No hay registros disponibles",
                    infoFiltered: "(filtrado de _MAX_ elementos)",
                    zeroRecords: "No hay registros con este criterio de búsqueda",
                    infoPostFix: "",
                    loadingRecords: "Cargando...",
                    emptyTable: "La tabla aún no contiene registros",
                    paginate: {
                        first: "Primero",
                        previous: "Anterior",
                        next: "Siguiente",
                        last: "último"
                    },
                    aria: {
                        sortAscending: ": Ordenar de forma ascendente",
                        sortDescending: ": Ordenar de forma descendente"
                    }
                }
            });

        });
    </script>
</body>

</html>