    function recuperarDatosFormulario() {
      let data = {
        opciones: $('#opciones').val(),
        Doctores: $('#Doctores').val(),
        type: $('#type').val(),
        fecha: $('#fecha').val(),
        H1: $('#H1').val(),
        H2: $('#H2').val(),
        H3: $('#H3').val(),
        H4: $('#H4').val(),
        H5: $('#H5').val(),
        H6: $('#H6').val()
      };
      console.log(typeof data.H1)
      if (data.opciones == '0') {
        Swal.fire({
          icon: 'error',
          title: 'Oops...',
          text: 'Debe seleccionar una especialidad'
        });
        return false;
      } if (data.type == '0') {
        Swal.fire({
          icon: 'error',
          title: 'Oops...',
          text: 'Debe seleccionar el tipo de excepción'
        });
        return false;
      } if (data.fecha == "") {
        Swal.fire({
          icon: 'error',
          title: 'Oops...',
          text: 'Debe seleccionar una fecha'
        });
        return false;
      }if (data.H1 >= data.H2){
        Swal.fire({
          icon: 'error',
          title: 'Oops...',
          text: 'La hora de finalización debe ser mayor a la de inicio'
        });
        return false;
      } if (data.H3 >= data.H4 & data.H3 !== '' & data.H4 !== ''){
        Swal.fire({
          icon: 'error',
          title: 'Oops...',
          text: 'La hora de finalización debe ser mayor a la de inicio'
        });
        return false;
      } if (data.H5 >= data.H6 & data.H5 !== '' & data.H6 !== ''){
        Swal.fire({
          icon: 'error',
          title: 'Oops...',
          text: 'La hora de finalización debe ser mayor a la de inicio'
        });
        return false;
      } 
      return data;
    }

    function agregarRegistro(data) {
      $.ajax({
        type: 'POST',
        url: '/createException',
        data: data,
        success: function (msg) {
          Swal.fire(
            '¡Buen trabajo!',
            '¡Se han enviado correctamente los datos!',
            'success'
          ).then(function () {
            window.location = "/admin/adminmain";
          });
        },
        error: function (error) {
          Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: 'Hubo un error'
          })
        }
      });
    }

